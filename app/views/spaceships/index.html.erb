<div class="container my-2 px-1">
<h4 class="my-3"> Today's deals! </h4>
  <div class="row m-1">
    <% @spaceships.each do |spaceship|  %>
      <div class="card-trip col-sm-4 box">
        <%= image_tag "ba-3000qx.jpg" %>
        <div class="card-trip-infos">
          <div>
            <h2> <%= spaceship.name %> </h2>
            <p> <%= spaceship.description %> </p>
            <p> Great deal! </p>
          </div>
          <p class="card-trip-pricing"> SC <%= spaceship.price %> </p>
          <%= image_tag "mars.png", class: "card-trip-user avatar-bordered" %>
        </div>
        <% if user_signed_in? && current_user.admin %>
        <%= link_to "Add a Spaceship", new_spaceship_path, class: "btn btn-info p-1 m-2" %>
        <div class="d-flex justify-content-between" ></div>
        <%= link_to "Edit Spaceship", edit_spaceship_path(spaceship) , class: "btn btn-info p-1 m-2" %>
        <%= link_to "Delete", spaceship_path(spaceship), method: :delete, class: "btn btn-info p-1 m-2" %>
        <% else %>
        <%= link_to "Book now", spaceship_path(spaceship), class: "btn btn-dark p-1 m-2", id: "book-now" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "Back", root_path, class: 'btn btn-info my-3 mx-3' %>


